<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.app.views.RegisterViewController" prefWidth="400.0" prefHeight="300.0">
    <children>
        <Label text="Registrarse" styleClass="headline">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <TextField fx:id="emailField" promptText="Correo electrónico" prefWidth="300.0"/>
        <PasswordField fx:id="passwordField" promptText="Contraseña" prefWidth="300.0"/>
        <Button text="Registrarse" onAction="#handleRegister" styleClass="btn-red"/>
        <Button text="Cancelar" onAction="#handleCancel" styleClass="btn-gray"/>
    </children>
</VBox>
